@model IEnumerable<AssessmentGPMAMVC.Models.advice>

@{
    ViewData["Title"] = "Index";
}



<h1>Index</h1>

<partial>
    @Html.Partial("_Dashboard")
</partial>

<section class="Quest bg-light">
    <div class="container-fluid">
        <div class="w-25 d-flex ">
            <a asp-action="Create"><input type="button" value="اضافه النصائح" class="btn btn-success"></a>
        </div>
        <table class="table">
            <thead class="mytable">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VideoUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Section)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageUrl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VideoUrl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Section.Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</section>