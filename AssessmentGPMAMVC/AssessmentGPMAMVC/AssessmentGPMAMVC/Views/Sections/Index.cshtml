@model IEnumerable<AssessmentGPMAMVC.Models.Section>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<partial>
    @Html.Partial("_Dashboard")
</partial>

<section class="Quest bg-light">
    <div class="container-fluid">
        <div class="w-25 d-flex ">
            <a asp-action="Create"><input type="button" value="اضافه الاقسام" class="btn btn-success"></a>
        </div>
        <table class="table">
            <thead class="mytable">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th> @Html.DisplayNameFor(model => model.Roadmap)</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Roadmap.title)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</section>